params.timestamp = new Date().format('yyyyMMdd-HH-mm-ss')

manifest {
  homePage                      = "https://github.com/ndreey/stammerula2025"
  description                   = "stammerula"
  mainScript                    = "main.nf"
  version                       = "1.0.0"
  author                        = "ndreey"
}


// Shared settings
params {
    tracedir                     = "pipeline_info"
}
// Image executor
apptainer {
    enabled                      = true
    autoMounts                   = true
}


// Local and SLURM profile
profiles {
  local {
    process {
      maxForks                   = 10
      executor                   = "local"
    }
  }

  slurm {
    executor                     = "slurm"
    queue                        = "shared"
    queueSize                    = 30
    submitRateLimit              = "30 min"
    clusterOptions               = "-A ${params.slurm.project}"
  }
}


// Workflow process settings
process {

  withLabel: index {
    memory                      = "230 GB"
    cpus                        = 2
    time                        = "24h"
    queue                       = "memory"
  }

  withLabel: stats {
    memory                      = "16 GB"
    cpus                        = 8
    time                        = "8h 30m"
  }
  
  withLabel: qc {
    memory                       = "8 GB"
    cpus                         = 2
    time                         = "2h 30m"
  }

  withLabel: trim {
    memory                       = "12 GB"
    cpus                         = 4
    time                         = "20h 30m"
  }

  withLabel: decon {
    memory                       = "250 GB"
    cpus                         = 8
    time                         = "24h"
  }

  withLabel: metamdbg {
    memory                       = "64 GB"
    cpus                         = 32
    time                         = "30h"
    queue                        = "memory"
  }

  withLabel: megahit {
    memory                       = "500 GB"
    cpus                         = 32
    time                         = "30h"
    queue                        = "memory"
  }

  withLabel: metaWRAP {
    memory                    = "64 GB"
    cpus                      = 8
    time                      = "23h 30m"
    queue                     = "main"
  }

  withName: FASTQC_RAW {
    publishDir = [
      path: "${params.res.qc}/fastqc-raw",
      mode: "symlink"
    ]
  }

  withName: FASTQC_CCS {
    publishDir = [
      path: "${params.res.qc}/fastqc-ccs-raw",
      mode: "symlink"
    ]
  }

  withName: MULTIQC_RAW {
    publishDir = [
      path: "${params.res.qc}/multiqc-raw",
      mode: "symlink"
    ]
  }

  withName: MULTIQC_CCS {
    publishDir = [
      path: "${params.res.qc}/multiqc-ccs-raw",
      mode: "symlink"
    ]
  }

  withName: FASTQC_TRIM {
    publishDir = [
      path: "${params.res.qc}/fastqc-trim",
      mode: "symlink"
    ]
  }

  withName: MULTIQC_TRIM {
    publishDir = [
      path: "${params.res.qc}/multiqc-trim",
      mode: "symlink"
    ]
  }

  withName: MULTIQC_FASTP {
    publishDir = [
      path: "${params.res.qc}/multiqc-fastp",
      mode: "symlink"
    ]
  }
}



// Reports
timeline {
    enabled             = true
    file                = "${params.tracedir}/${params.timestamp}_timeline.html"
}

report {
    enabled             = true
    file                = "${params.tracedir}/${params.timestamp}_report.html"
}

trace {
    enabled             = true
    file                = "${params.tracedir}/${params.timestamp}_trace.txt"
}

dag {
    enabled             = true
    file                = "${params.tracedir}/DAG/${params.timestamp}_dag.png"
}